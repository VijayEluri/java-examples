               version="3.1"
               impl-version="2.0">

  <enterprise-beans>
    
    <session>
      <ejb-name>EJB1</ejb-name>
      <ejb-local-ref>
        <ejb-ref-name>ejb/EJB2LocalHome</ejb-ref-name>
        <jndi-name>java:app/ejb2dep-ejb2-1.0/EJB2!com.redhat.gss.example.ejb2dep.ejb2.EJB2LocalHome</jndi-name>
      </ejb-local-ref>

    </session>
    
  </enterprise-beans>
